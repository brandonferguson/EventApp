<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Event App</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>



</head>
<body>
        <div>
            <ul class="nav navbar-dark bg-dark fixed-top pl-2">
                <li class="nav-item px-4">@Html.ActionLink("Events", "Index", "Events")</li>
            </ul>
        </div>


        <div style="background-color:#007399; color:#f2f2f2;">
            <div class="container body-content">
                @RenderBody()

                <footer>
                        <p>&copy; @DateTime.Now.Year - My Event App</p>
                </footer>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
