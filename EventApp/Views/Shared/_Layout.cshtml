<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Event App</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap-datetimepicker.min.css">
    <link href="~/Content/site.css" rel="stylesheet" type="text/css" />



    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div>
        <ul class="nav navbar-dark bg-dark fixed-top pl-2">
            <li class="nav-item px-4">@Html.ActionLink("Events", "Index", "Events")</li>
            <li class="nav-item px-4">@Html.ActionLink("About", "About", "Events")</li>
        </ul>
    </div>


    <div style="background-color:#007399; color:#f2f2f2;">
        <div class="container body-content">
            @RenderBody()
        </div>
        <footer>
            <div class="bg-dark">
                <p>&copy; @DateTime.Now.Year - My Event App</p>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.21.0/moment.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script>
        $(function () {
            $('input.datepicker').datetimepicker();
        });
    </script>



</body>
</html>
