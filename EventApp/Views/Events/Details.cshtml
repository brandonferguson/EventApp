@model EventApp.Models.Event

@{
    ViewBag.Title = "Details";
}

<h2 class="text-shadow">@Html.DisplayFor(model => model.EventName)</h2>

<div>
    @*<h4 class="text-shadow">Event</h4>*@
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.EventName, htmlAttributes: new { @class = "control-label col-md-2 text-shadow" })
                <div class="col-md-10 display-format">
                    @Html.DisplayFor(model => model.EventName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2 text-shadow" })
                <div class="col-md-10 display-format">
                    @Html.DisplayFor(model => model.Date)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-2 text-shadow" })
                <div class="col-md-10 display-format">
                    @Html.DisplayFor(model => model.Location)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Guests, htmlAttributes: new { @class = "control-label col-md-2 text-shadow" })
                <div class="col-md-10 display-format" >
                    @Html.DisplayFor(model => model.Guests)
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2 text-shadow" })
                <div class="col-md-10 display-format">
                    @Html.DisplayFor(model => model.Description)

                </div>
            </div>
        </div>
    </div>


</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.EventId }, new { @class = "btn btn-dark" })
    @Html.ActionLink("Delete", "Delete", new { id = Model.EventId }, new { @class = "btn btn-dark d-sm-none" })
    @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn btn-dark" })
</p>
