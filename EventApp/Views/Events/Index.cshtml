@model IEnumerable<EventApp.Models.Event>

@{
    ViewBag.Title = "Events";
}

<h2>Your Events</h2>

<p>
    <button type="button" class="btn btn-dark">@Html.ActionLink("Create New", "Create")</button>
</p>
<table class="table">
    <tr class="h4">
        <th>
            @Html.DisplayNameFor(model => model.EventName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Guests)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Description)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.EventName, "Details", new { id = item.EventId })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Guests)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.EventId }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.EventId }) |*@
            @Html.ActionLink("Delete", "Delete", new { id = item.EventId })
        </td>
    </tr>
}

</table>
