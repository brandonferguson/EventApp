@model EventApp.Models.Event

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-shadow">Delete</h2>

<h3 class="text-shadow">Are you sure you want to delete this?</h3>

<div>
    <h4>Event</h4>
    <hr />
